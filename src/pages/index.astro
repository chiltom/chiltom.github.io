---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { Image } from 'astro:assets';

// Get all blog posts sorted by date (newest first)
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Get featured post (most recent) and next 2 posts
const featuredPost = posts[0];
const secondaryPosts = posts.slice(1, 3);
const recentPosts = posts.slice(3, 8); // Show 5 more posts in the recent list
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="min-h-screen flex flex-col bg-white dark:bg-gray-950">
		<Header />

		<!-- Hero Section -->
		<section class="min-h-screen flex items-center justify-center bg-linear-to-br from-blue-50 via-white to-indigo-50 dark:from-gray-900 dark:via-gray-950 dark:to-indigo-950 px-6 py-20 animate-fade-in-up">
			<div class="max-w-4xl mx-auto text-center">
				<h1 class="text-6xl md:text-8xl font-bold mb-6 bg-linear-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400 bg-clip-text text-transparent">
					{SITE_TITLE}
				</h1>
				<p class="text-2xl md:text-3xl text-gray-700 dark:text-gray-300 mb-4 font-medium">
					Full-stack engineering insights from the field
				</p>
				<p class="text-lg md:text-xl text-gray-600 dark:text-gray-400 mb-12 max-w-2xl mx-auto">
					Building systems, solving problems, sharing lessons learned
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a
						href="#featured"
						class="px-8 py-3 border-2 border-blue-600 hover:border-blue-700 dark:border-blue-500 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 transition-colors shadow-lg hover:shadow-xl"
					>
						Read Latest Posts
					</a>
					<a
						href="/about"
						class="px-8 py-3 border-2 border-blue-600 text-blue-600 dark:border-blue-400 dark:text-blue-400 rounded-lg font-medium hover:bg-blue-50 dark:hover:bg-blue-950 transition-colors"
					>
						About Me
					</a>
				</div>
			</div>
		</section>

		<!-- Featured Posts Section -->
		<section id="featured" class="max-w-6xl mx-auto px-6 py-20">
			<h2 class="text-4xl font-bold mb-12 text-gray-900 dark:text-gray-100">Featured Posts</h2>

			{featuredPost && (
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
					<!-- Large Featured Post -->
					<a
						href={`/blog/${featuredPost.id}/`}
						class="group relative overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 bg-white dark:bg-gray-800 lg:col-span-2"
					>
						<div class="absolute inset-0 bg-linear-to-r from-blue-600 to-indigo-600 opacity-0 group-hover:opacity-100 transition-opacity -z-10"></div>

						<div class="grid grid-cols-1 md:grid-cols-[40%_60%] gap-6 p-1">
							<!-- Image -->
							{featuredPost.data.heroImage && (
								<div class="overflow-hidden rounded-xl h-64 md:h-auto">
									<Image
										src={featuredPost.data.heroImage}
										alt={featuredPost.data.title}
										class="w-full h-full object-cover transform scale-100 group-hover:scale-105 transition-transform duration-500"
										width={600}
										height={400}
									/>
								</div>
							)}
							{!featuredPost.data.heroImage && (
								<div class="bg-linear-to-br from-blue-100 to-indigo-100 dark:from-blue-900 dark:to-indigo-900 rounded-xl h-64 md:h-auto flex items-center justify-center">
									<svg class="w-20 h-20 text-blue-600 dark:text-blue-400 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
									</svg>
								</div>
							)}

							<!-- Content -->
							<div class="p-6">
								<span class="inline-block px-3 py-1 text-sm bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-300 rounded-full mb-4 font-medium">
									Featured
								</span>
								<h3 class="text-3xl font-bold mb-3 text-gray-900 dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
									{featuredPost.data.title}
								</h3>
								<p class="text-gray-600 dark:text-gray-400 mb-4 leading-relaxed">
									{featuredPost.data.description}
								</p>
								<div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
									<time datetime={featuredPost.data.pubDate.toISOString()}>
										{featuredPost.data.pubDate.toLocaleDateString('en-us', {
											year: 'numeric',
											month: 'short',
											day: 'numeric',
										})}
									</time>
								</div>
							</div>
						</div>
					</a>
				</div>
			)}

			<!-- Secondary Posts Grid -->
			{secondaryPosts.length > 0 && (
				<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
					{secondaryPosts.map((post) => (
						<a
							href={`/blog/${post.id}/`}
							class="group overflow-hidden rounded-xl bg-white dark:bg-gray-800 shadow-md hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
						>
							<!-- Image -->
							<div class="overflow-hidden h-64">
								{post.data.heroImage ? (
									<Image
										src={post.data.heroImage}
										alt={post.data.title}
										class="w-full h-full object-cover transform scale-100 group-hover:scale-105 transition-transform duration-500"
										width={600}
										height={400}
									/>
								) : (
									<div class="w-full h-full bg-linear-to-br from-blue-100 to-indigo-100 dark:from-blue-900 dark:to-indigo-900 flex items-center justify-center">
										<svg class="w-16 h-16 text-blue-600 dark:text-blue-400 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
										</svg>
									</div>
								)}
							</div>

							<!-- Content -->
							<div class="p-6">
								<h3 class="text-2xl font-bold mb-2 text-gray-900 dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
									{post.data.title}
								</h3>
								<p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-3">
									{post.data.description}
								</p>
								<div class="flex items-center justify-between">
									<time datetime={post.data.pubDate.toISOString()} class="text-sm text-gray-500 dark:text-gray-400">
										{post.data.pubDate.toLocaleDateString('en-us', {
											year: 'numeric',
											month: 'short',
											day: 'numeric',
										})}
									</time>
									<span class="text-blue-600 dark:text-blue-400 hover:underline text-sm font-medium">Read more â†’</span>
								</div>
							</div>
						</a>
					))}
				</div>
			)}
		</section>

		<!-- About Preview Section -->
		<section class="bg-gray-50 dark:bg-gray-900 py-20">
			<div class="max-w-6xl mx-auto px-6">
				<div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
					<!-- Text Content -->
					<div>
						<h2 class="text-4xl font-bold mb-6 text-gray-900 dark:text-gray-100">Hi, I'm Tom ðŸ‘‹</h2>
						<div class="prose prose-lg">
							<p class="text-gray-700 dark:text-gray-300 leading-relaxed mb-4">
								I'm a full-stack engineer passionate about building robust, scalable systems.
								This blog is where I document what I learn, share what works (and what doesn't),
								and help others avoid the mistakes I've made.
							</p>
							<p class="text-gray-700 dark:text-gray-300 leading-relaxed mb-6">
								I write about backend architecture, frontend patterns, database design, and
								everything in between. When I'm not debugging production issues, you'll find
								me experimenting with new technologies.
							</p>
						</div>
						<a
							href="/about"
							class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 transition-colors shadow-lg hover:shadow-xl"
						>
							More About Me
							<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
							</svg>
						</a>
					</div>

					<!-- Placeholder for image (can add later) -->
					<div class="hidden md:block">
						<div class="bg-linear-to-br from-blue-100 to-indigo-100 dark:from-blue-900 dark:to-indigo-900 rounded-2xl h-96 flex items-center justify-center shadow-xl">
							<svg class="w-32 h-32 text-blue-600 dark:text-blue-400 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
							</svg>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Recent Writing Section -->
		{recentPosts.length > 0 && (
			<section class="max-w-6xl mx-auto px-6 py-20">
				<div class="flex items-center justify-between mb-12">
					<h2 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mx-6">Recent Writing</h2>
					<a href="/blog" class="text-blue-600 dark:text-blue-400 hover:underline font-medium">
						View All Posts â†’
					</a>
				</div>

				<div class="space-y-6">
					{recentPosts.map((post, index) => (
						<a
							href={`/blog/${post.id}/`}
							class="group flex items-start gap-6 p-6 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors relative"
						>
							<!-- Accent bar that appears on hover -->
							<div class="absolute left-0 top-0 bottom-0 w-1 bg-blue-600 dark:bg-blue-400 transform scale-y-0 group-hover:scale-y-100 transition-transform origin-top rounded-full"></div>

							<!-- Number -->
							<div class="shrink-0 w-12 h-12 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center font-bold text-gray-400 dark:text-gray-500 group-hover:bg-blue-100 dark:group-hover:bg-blue-900 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
								{String(index + 1).padStart(2, '0')}
							</div>

							<!-- Content -->
							<div class="flex-1">
								<h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
									{post.data.title}
								</h3>
								<p class="text-gray-600 dark:text-gray-400 mb-2 line-clamp-2">
									{post.data.description}
								</p>
								<time datetime={post.data.pubDate.toISOString()} class="text-sm text-gray-500 dark:text-gray-400">
									{post.data.pubDate.toLocaleDateString('en-us', {
										year: 'numeric',
										month: 'short',
										day: 'numeric',
									})}
								</time>
							</div>

							<!-- Arrow icon -->
							<div class="shrink-0 text-gray-400 dark:text-gray-500 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
								<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
								</svg>
							</div>
						</a>
					))}
				</div>
			</section>
		)}

		<Footer />
	</body>
</html>
